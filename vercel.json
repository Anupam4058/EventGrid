{
  "version": 2,
  "builds": [
    {
      "src": "Backend/api/index.js",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/Backend/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/Frontend/dist/$1" },
    { "src": "/.*", "dest": "/Frontend/dist/index.html" }
  ]
}

